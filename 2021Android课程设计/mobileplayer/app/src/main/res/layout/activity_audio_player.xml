<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#332196F3"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_vision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/anim_vision" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="artist"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </FrameLayout>

    <com.sping.mobileplayer.view.LyricView
        android:id="@+id/lyric_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#80FFFFFF"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:text="00:01/03:15"
        android:background="#80FFFFFF"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <SeekBar
        android:id="@+id/sb_audio"
        style="@android:style/Widget.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:max="100"
        android:maxHeight="3dp"
        android:minHeight="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:progress="0"
        android:background="#FEFDCD"
        android:progressDrawable="@drawable/progress_audio_horizotal"
        android:thumb="@drawable/progress_audio_slip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View style="@style/placeholder" />

        <Button
            android:id="@+id/btn_play_mode"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_btn_audioplaymode_repeat" />

        <View style="@style/placeholder" />

        <Button
            android:id="@+id/btn_pre"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_btn_audio_back" />

        <View style="@style/placeholder" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_btn_audio_play" />

        <View style="@style/placeholder" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_btn_audio_next" />

        <View style="@style/placeholder" />

        <Button
            android:id="@+id/btn_playlist"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_btn_audio_list" />

        <View style="@style/placeholder" />
    </LinearLayout>

</LinearLayout>